<%= form_tag(new_test_url_path, :method => "get", class:"new_url_form") do %>

  <%= hidden_field_tag :url_text %>
  <%= hidden_field_tag :request %>
  <%= hidden_field_tag :post_params %>

    <%= label_tag :code %>
  <div class="row center">
    <%= @response.code %>
  </div>

    <%= label_tag :message %>
  <div class="row center">
    <%= @response.message %>
  </div>

    <%= label_tag :headers %>
  <div class="row center overflow">
    <%= @response.headers.inspect %>
  </div>

    <%= label_tag :body %>
  <div class="row center overflow">
    <%= @response.body %>
  </div>

  <div class="actions">
    <%= button_tag(class:"btn btn-primary", type: 'submit') do %>
      <%= content_tag(:strong, 'Transfer Response To Form') %>
    <% end %>
  </div>

<% end %>

<script type="text/javascript">
  $( document ).ready(function() {
    url=$('.url-text-field').val();
    request=$('select#test_url_request').val();
    post_params=$('textarea#test_url_post_params').val();
    // post_params=
    $('#url_text').attr('value', url)
    $('input#request').attr('value', request)
    $('input#post_params').attr('value', post_params)
  });
   
</script>